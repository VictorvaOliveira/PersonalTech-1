<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity_Exercicio">


    <TextView
        android:id="@+id/Title_Exercicio"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginLeft="100dp"

        android:layout_marginTop="5dp"

        android:fontFamily="sans-serif"
        android:hint="@string/Title_Exercicio"
        android:paddingLeft="30dip"
        android:paddingRight="26dip"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="1dp" />


    <TextView
        android:id="@+id/Descricao_Exercicio"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"


        android:fontFamily="sans-serif"
        android:hint="@string/Descricao_Exercicio"
        android:paddingLeft="30dip"
        android:paddingRight="26dip"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="52dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="294dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/grafico"
            android:layout_width="match_parent"
            android:layout_height="184dp"


            android:src="@drawable/abdominal" />


        <Chronometer
            android:id="@+id/chronometer1"
            android:layout_width="61dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginTop="5dp"

            android:background="@drawable/bordinha"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp"
            android:textStyle="bold" />


    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
    android:id="@+id/button1"

    android:layout_width="70dp"
    android:layout_height="45dp"
    android:layout_gravity="center"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="160dp"
    android:layout_marginTop="15dp"
    android:layout_weight="1"
    android:background="@drawable/start_icon" /></LinearLayout>



</LinearLayout>