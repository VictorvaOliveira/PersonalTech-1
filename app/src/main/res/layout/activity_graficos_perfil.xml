<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GraficosPerfil">
    <TextView
    android:id="@+id/atualizacao"
    android:layout_width="fill_parent"
    android:layout_height="59dp"
    android:layout_marginLeft="70dp"
    android:fontFamily="sans-serif"
    android:hint="@string/Atualizacao"
    android:paddingLeft="30dip"
    android:paddingRight="26dip"
    android:textColor="@color/black"
    android:textSize="20sp"
    android:textStyle="bold"
    tools:layout_editor_absoluteX="73dp"
    tools:layout_editor_absoluteY="14dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/PesoPerfil"
                android:layout_width="229dp"
                android:layout_height="59dp"
                android:fontFamily="sans-serif"
                android:hint="@string/PesoPerfil"
                android:paddingLeft="30dip"
                android:paddingRight="26dip"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="78dp"
                tools:layout_editor_absoluteY="73dp" />

            <TextView
                android:id="@+id/AlturaPerfil"
                android:layout_width="229dp"
                android:layout_height="59dp"
                android:fontFamily="sans-serif"
                android:hint="@string/AlturaPerfil"
                android:paddingLeft="30dip"
                android:paddingRight="26dip"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="78dp"
                tools:layout_editor_absoluteY="132dp" />

            <TextView
                android:id="@+id/pressaoPerfil"
                android:layout_width="229dp"
                android:layout_height="59dp"
                android:fontFamily="sans-serif"
                android:hint="@string/PressaoPerfil"
                android:paddingLeft="30dip"
                android:paddingRight="26dip"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="78dp"
                tools:layout_editor_absoluteY="191dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>



    <TextView
        android:id="@+id/AvisoGrafico"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="70dp"
        android:fontFamily="sans-serif"
        android:hint="@string/AvisoGrafico"
        android:paddingLeft="30dip"
        android:paddingRight="26dip"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="14dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"

        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/grafico"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/grafic"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="243dp" />

    </LinearLayout>

</LinearLayout>